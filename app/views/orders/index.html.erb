<div class="container">
  <center>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Order #</th>
          <th>Order Placed</th>
          <th>Order Status</th>
          <th>Total</th>
        </tr>
      </thead>
      <tbody>
        <% current_user.orders.each do |order| %>
          <tr id="order-<%= order.id %>" class="order">
            <th scope="row"> <%= link_to order.id, user_order_path(current_user, order) %></th>
            <td><%= order.date %></td>
            <td><%= order.status.capitalize %></td>
            <td><%= number_to_currency(order.ordered_orginal_price) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </center>
</div>
